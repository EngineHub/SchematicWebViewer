{
    "include": ["src/**/*"],
    "compilerOptions": {
        "outDir": "dist/esm",
        "sourceMap": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "module": "esnext",
        "lib": ["esnext", "dom"],
        "target": "es6",
        "allowJs": true,
        "declaration": true,
        "skipLibCheck": true
    },
    "exclude": ["node_modules", "dist"],
    "types": ["babylonjs"]
}
